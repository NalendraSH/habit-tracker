<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.registerlevel.RegisterLevelActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_register_level"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/toolbar_register_level_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tentukan Level"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:fontFamily="@font/nunitosans_regular"
            android:layout_gravity="center"/>

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar_register_level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textview_register_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:text="@string/register_level_content"
                android:textSize="15sp"
                android:fontFamily="@font/nunitosans_regular"
                app:layout_constraintTop_toTopOf="parent"/>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraint_register_level_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toBottomOf="@id/textview_register_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_register_level_1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Level 1"
                    android:textColorHint="@color/colorPrimary"
                    app:hintTextAppearance="@style/TextInputLayoutCustom"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/textview_register_bintang_1">

                    <EditText
                        android:id="@+id/edittext_register_level_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:drawableStart="@drawable/ic_star"
                        android:drawablePadding="5dp"
                        app:backgroundTint="@color/colorPrimary"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/textview_register_bintang_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Bintang"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/nunitosans_regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textinput_register_level_1"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraint_register_level_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toBottomOf="@id/constraint_register_level_1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_register_level_2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Level 2"
                    android:textColorHint="@color/colorPrimary"
                    app:hintTextAppearance="@style/TextInputLayoutCustom"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/textview_register_bintang_2">

                    <EditText
                        android:id="@+id/edittext_register_level_2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:drawableStart="@drawable/ic_star"
                        android:drawablePadding="5dp"
                        app:backgroundTint="@color/colorPrimary"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/textview_register_bintang_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Bintang"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/nunitosans_regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textinput_register_level_2"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraint_register_level_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toBottomOf="@id/constraint_register_level_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_register_level_3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Level 3"
                    android:textColorHint="@color/colorPrimary"
                    app:hintTextAppearance="@style/TextInputLayoutCustom"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/textview_register_bintang_3">

                    <EditText
                        android:id="@+id/edittext_register_level_3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:drawableStart="@drawable/ic_star"
                        android:drawablePadding="5dp"
                        app:backgroundTint="@color/colorPrimary"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/textview_register_bintang_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Bintang"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/nunitosans_regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textinput_register_level_3"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraint_register_level_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toBottomOf="@id/constraint_register_level_3"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_register_level_4"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Level 4"
                    android:textColorHint="@color/colorPrimary"
                    app:hintTextAppearance="@style/TextInputLayoutCustom"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/textview_register_bintang_4">

                    <EditText
                        android:id="@+id/edittext_register_level_4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:drawableStart="@drawable/ic_star"
                        android:drawablePadding="5dp"
                        app:backgroundTint="@color/colorPrimary"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/textview_register_bintang_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Bintang"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/nunitosans_regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textinput_register_level_4"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <android.support.constraint.ConstraintLayout
                android:id="@+id/constraint_register_level_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toBottomOf="@id/constraint_register_level_4"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/textinput_register_level_5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Level 5"
                    android:textColorHint="@color/colorPrimary"
                    app:hintTextAppearance="@style/TextInputLayoutCustom"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/textview_register_bintang_5">

                    <EditText
                        android:id="@+id/edittext_register_level_5"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1"
                        android:textColor="#000000"
                        android:drawableStart="@drawable/ic_star"
                        android:drawablePadding="5dp"
                        app:backgroundTint="@color/colorPrimary"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:id="@+id/textview_register_bintang_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="5dp"
                    android:text="Bintang"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary"
                    android:fontFamily="@font/nunitosans_regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/textinput_register_level_5"
                    app:layout_constraintEnd_toEndOf="parent"/>

            </android.support.constraint.ConstraintLayout>

            <Button
                android:id="@+id/button_register_simpan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="25dp"
                android:layout_marginEnd="25dp"
                android:text="Simpan"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/nunitosans_regular"
                app:backgroundTint="@color/colorPrimary"
                app:layout_constraintTop_toBottomOf="@id/constraint_register_level_5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ProgressBar
                android:visibility="gone"
                android:id="@+id/progress_register_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                app:layout_constraintTop_toBottomOf="@id/constraint_register_level_5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>