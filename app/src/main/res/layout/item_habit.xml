<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/button_habit_substract"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_left_corner_empty"
                app:layout_constraintWidth_percent="0.17"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_substract"
                app:layout_constraintTop_toTopOf="@id/button_habit_substract"
                app:layout_constraintBottom_toBottomOf="@id/button_habit_substract"
                app:layout_constraintStart_toStartOf="@id/button_habit_substract"
                app:layout_constraintEnd_toEndOf="@id/button_habit_substract"/>

            <View
                android:id="@+id/button_habit_add"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_right_corner_empty"
                app:layout_constraintWidth_percent="0.17"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_add_2"
                app:layout_constraintTop_toTopOf="@id/button_habit_add"
                app:layout_constraintBottom_toBottomOf="@id/button_habit_add"
                app:layout_constraintStart_toStartOf="@id/button_habit_add"
                app:layout_constraintEnd_toEndOf="@id/button_habit_add"/>

            <TextView
                android:id="@+id/textview_habit_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="21dp"
                android:text="Menggosok Gigi"
                android:textSize="16sp"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/nunitosans_regular"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/button_habit_substract"/>

        </android.support.constraint.ConstraintLayout>
        
    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>